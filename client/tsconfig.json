{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "paths": {
      "@src/*": ["src/*"],
      "@Components/*": ["src/components/*"],
      "@Module/*": ["src/module/*"],
      "@Lib/*": ["src/lib/*"],
      "@Types/*": ["src/types/*"],
    }
  },
  "include": [
    "vite.config.ts", "src", "**/*.ts", "**/*.tsx"
  ]
}
